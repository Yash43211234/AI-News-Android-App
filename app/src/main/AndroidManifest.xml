<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Internet permission (required for APIs) -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- Optional storage permissions (only needed if accessing files directly) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/newspaper"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InstaNews"
        tools:targetApi="31">
        <meta-data

            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713"/>

        <activity
            android:name=".login"
            android:exported="false" />
        <activity
            android:name=".Signup"
            android:exported="false" />

        <activity android:name=".WebViewActivity" />
        <activity
            android:name=".SettingActivity"
            android:exported="false" /> <!-- Your main activity where News API is displayed -->

        <activity
            android:name=".MainActivity"
            android:exported="false" /> <!-- Welcome screen (Launcher) -->
        <activity
            android:name=".Welcome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>